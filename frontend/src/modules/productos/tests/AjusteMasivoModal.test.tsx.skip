import { render, screen, fireEvent, waitFor } from '@testing-library/react';
import { QueryClient, QueryClientProvider } from '@tanstack/react-query';
import { BrowserRouter } from 'react-router-dom';
import { vi } from 'vitest';
import { AjusteMasivoModal } from '../components/AjusteMasivoModal';
import * as useProductos from '../hooks/useProductos';

// Mock del hook useProductos
const mockUseProductos = vi.spyOn(useProductos, 'useProductos');

const mockProducts = [
  { id: 1, nombre: 'Producto A', precio_lista: 100 },
  { id: 2, nombre: 'Producto B', precio_lista: 200 },
  { id: 3, nombre: 'Producto C', precio_lista: 300 }
];

const TestWrapper = ({ children }: { children: React.ReactNode }) => {
  const queryClient = new QueryClient({
    defaultOptions: { 
      queries: { retry: false },
      mutations: { retry: false }
    }
  });
  
  return (
    <QueryClientProvider client={queryClient}>
      <BrowserRouter>
        {children}
      </BrowserRouter>
    </QueryClientProvider>
  );
};

describe('AjusteMasivoModal', () => {
  const mockMassUpdate = {
    mutateAsync: vi.fn(),
    isPending: false,
    isError: false,
    error: null
  };

  beforeEach(() => {
    mockUseProductos.mockReturnValue({
      productos: mockProducts,
      isLoading: false,
      massUpdatePrices: mockMassUpdate,
      isUpdating: false
    } as any);
    
    vi.clearAllMocks();
  });

  afterEach(() => {
    vi.resetAllMocks();
  });

  it('should render correctly when open', () => {
    render(
      <TestWrapper>
        <AjusteMasivoModal
          isOpen={true}
          onClose={() => {}}
        />
      </TestWrapper>
    );

    expect(screen.getByText('Ajuste Masivo de Precios')).toBeInTheDocument();
    expect(screen.getByText('Porcentaje')).toBeInTheDocument();
    expect(screen.getByText('Monto Fijo')).toBeInTheDocument();
    expect(screen.getByText('Configuración del Ajuste')).toBeInTheDocument();
  });

  it('should not render when closed', () => {
    render(
      <TestWrapper>
        <AjusteMasivoModal
          isOpen={false}
          onClose={() => {}}
        />
      </TestWrapper>
    );

    expect(screen.queryByText('Ajuste Masivo de Precios')).not.toBeInTheDocument();
  });

  it('should display products correctly', () => {
    render(
      <TestWrapper>
        <AjusteMasivoModal
          isOpen={true}
          onClose={() => {}}
        />
      </TestWrapper>
    );

    expect(screen.getByText('Producto A')).toBeInTheDocument();
    expect(screen.getByText('Producto B')).toBeInTheDocument();
    expect(screen.getByText('Producto C')).toBeInTheDocument();
    
    expect(screen.getByText('$100.00 → $100.00')).toBeInTheDocument();
    expect(screen.getByText('$200.00 → $200.00')).toBeInTheDocument();
    expect(screen.getByText('$300.00 → $300.00')).toBeInTheDocument();
  });

  it('should calculate percentage adjustments correctly', async () => {
    render(
      <TestWrapper>
        <AjusteMasivoModal
          isOpen={true}
          onClose={() => {}}
        />
      </TestWrapper>
    );

    // Select percentage adjustment (should be default)
    const percentageRadio = screen.getByDisplayValue('percentage');
    expect(percentageRadio).toBeChecked();
    
    // Enter 10% adjustment
    const valueInput = screen.getByPlaceholderText('10');
    fireEvent.change(valueInput, { target: { value: '10' } });

    await waitFor(() => {
      // Should show new prices: $110.00, $220.00, $330.00
      expect(screen.getByText('$100.00 → $110.00')).toBeInTheDocument();
      expect(screen.getByText('$200.00 → $220.00')).toBeInTheDocument();
      expect(screen.getByText('$300.00 → $330.00')).toBeInTheDocument();
    });

    // Should show summary
    expect(screen.getByText(/con 10% de ajuste/)).toBeInTheDocument();
  });

  it('should calculate fixed adjustments correctly', async () => {
    render(
      <TestWrapper>
        <AjusteMasivoModal
          isOpen={true}
          onClose={() => {}}
        />
      </TestWrapper>
    );

    // Select fixed adjustment
    const fixedRadio = screen.getByDisplayValue('fixed');
    fireEvent.click(fixedRadio);
    
    // Enter $50 adjustment
    const valueInput = screen.getByPlaceholderText('100');
    fireEvent.change(valueInput, { target: { value: '50' } });

    await waitFor(() => {
      // Should show new prices: $150.00, $250.00, $350.00
      expect(screen.getByText('$100.00 → $150.00')).toBeInTheDocument();
      expect(screen.getByText('$200.00 → $250.00')).toBeInTheDocument();
      expect(screen.getByText('$300.00 → $350.00')).toBeInTheDocument();
    });

    // Should show summary
    expect(screen.getByText(/con \$50 de ajuste/)).toBeInTheDocument();
  });

  it('should handle negative adjustments correctly', async () => {
    render(
      <TestWrapper>
        <AjusteMasivoModal
          isOpen={true}
          onClose={() => {}}
        />
      </TestWrapper>
    );

    // Enter -20% adjustment
    const valueInput = screen.getByPlaceholderText('10');
    fireEvent.change(valueInput, { target: { value: '-20' } });

    await waitFor(() => {
      // Should show new prices: $80.00, $160.00, $240.00
      expect(screen.getByText('$100.00 → $80.00')).toBeInTheDocument();
      expect(screen.getByText('$200.00 → $160.00')).toBeInTheDocument();
      expect(screen.getByText('$300.00 → $240.00')).toBeInTheDocument();
    });
  });

  it('should handle product selection', () => {
    render(
      <TestWrapper>
        <AjusteMasivoModal
          isOpen={true}
          onClose={() => {}}
        />
      </TestWrapper>
    );

    // Initially no products selected
    expect(screen.getByText('Productos (0/3)')).toBeInTheDocument();

    // Click on first product
    const firstProduct = screen.getByText('Producto A');
    fireEvent.click(firstProduct.closest('div'));
    
    expect(screen.getByText('Productos (1/3)')).toBeInTheDocument();

    // Click Select All
    const selectAllButton = screen.getByText('Seleccionar Todo');
    fireEvent.click(selectAllButton);
    
    expect(screen.getByText('Productos (3/3)')).toBeInTheDocument();
    expect(screen.getByText('Deseleccionar Todo')).toBeInTheDocument();

    // Click Deselect All
    fireEvent.click(screen.getByText('Deseleccionar Todo'));
    expect(screen.getByText('Productos (0/3)')).toBeInTheDocument();
  });

  it('should apply mass price adjustment', async () => {
    const mockOnClose = vi.fn();
    const mockOnSuccess = vi.fn();

    render(
      <TestWrapper>
        <AjusteMasivoModal
          isOpen={true}
          onClose={mockOnClose}
          onSuccess={mockOnSuccess}
        />
      </TestWrapper>
    );

    // Select all products
    fireEvent.click(screen.getByText('Seleccionar Todo'));
    
    // Enter 10% adjustment
    const valueInput = screen.getByPlaceholderText('10');
    fireEvent.change(valueInput, { target: { value: '10' } });

    // Click apply
    const applyButton = screen.getByText(/Aplicar Ajuste \(3\)/);
    fireEvent.click(applyButton);

    await waitFor(() => {
      expect(mockMassUpdate.mutateAsync).toHaveBeenCalledWith([
        { id: 1, precio: 110 },
        { id: 2, precio: 220 },
        { id: 3, precio: 330 }
      ]);
    });
  });

  it('should disable apply button when no products selected or no value', () => {
    render(
      <TestWrapper>
        <AjusteMasivoModal
          isOpen={true}
          onClose={() => {}}
        />
      </TestWrapper>
    );

    const applyButton = screen.getByText(/Aplicar Ajuste \(0\)/);
    expect(applyButton).toBeDisabled();

    // Add value but no products selected
    const valueInput = screen.getByPlaceholderText('10');
    fireEvent.change(valueInput, { target: { value: '10' } });
    
    expect(applyButton).toBeDisabled();

    // Select a product but remove value
    fireEvent.click(screen.getByText('Producto A').closest('div'));
    fireEvent.change(valueInput, { target: { value: '' } });
    
    expect(screen.getByText(/Aplicar Ajuste \(1\)/)).toBeDisabled();
  });

  it('should show loading state during update', () => {
    mockUseProductos.mockReturnValue({
      productos: mockProducts,
      isLoading: false,
      massUpdatePrices: { ...mockMassUpdate, isPending: false },
      isUpdating: true
    } as any);

    render(
      <TestWrapper>
        <AjusteMasivoModal
          isOpen={true}
          onClose={() => {}}
        />
      </TestWrapper>
    );

    // Select products and value
    fireEvent.click(screen.getByText('Seleccionar Todo'));
    const valueInput = screen.getByPlaceholderText('10');
    fireEvent.change(valueInput, { target: { value: '10' } });

    expect(screen.getByText('Aplicando...')).toBeInTheDocument();
  });

  it('should reset form on close', () => {
    const mockOnClose = vi.fn();
    
    const { rerender } = render(
      <TestWrapper>
        <AjusteMasivoModal
          isOpen={true}
          onClose={mockOnClose}
        />
      </TestWrapper>
    );

    // Make some selections
    fireEvent.click(screen.getByText('Producto A').closest('div'));
    const valueInput = screen.getByPlaceholderText('10');
    fireEvent.change(valueInput, { target: { value: '15' } });
    
    // Close and reopen
    fireEvent.click(screen.getByRole('button', { name: /×/ }));
    
    rerender(
      <TestWrapper>
        <AjusteMasivoModal
          isOpen={true}
          onClose={mockOnClose}
        />
      </TestWrapper>
    );

    // Should be reset
    expect(screen.getByText('Productos (0/3)')).toBeInTheDocument();
    expect(screen.getByPlaceholderText('10')).toHaveValue('');
  });
});